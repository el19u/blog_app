<%= form_with(model: @user) do |f| %>
  <% if @user.errors.any? %>
    <div class="text-red-500">
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label("email") %>
    <%= f.email_field(:email) %>
  </div>

  <div class="field">
    <%= f.label("password") %>
    <%= f.password_field(:password) %>
  </div>

  <div class="submit">
    <%= f.submit("註冊")%>
  </div>
<% end %>